[Unit]
Description=Telegram Bot Service
After=network.target

[Service]
Type=simple
User=your_username
WorkingDirectory=/path/to/your/bot/directory
ExecStart=/usr/bin/python3 /path/to/your/bot/directory/doraborka.py
Restart=always
RestartSec=10
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=telebot

[Install]
WantedBy=multi-user.target 